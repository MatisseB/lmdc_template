<header>
   <nav>
      <div class="nav-wrapper">
         {{! @website global variable used to display a logo and website name  }}
         {{! check if a Website logo exists, if not, display the website name }}
         <a class="logo" href="{{@website.url}}">
            {{#if @website.logo}}
               <img src="{{@website.logo}}" alt="{{@website.name}}">
            {{else}}
               {{@website.name}}
            {{/if}}
         </a>
         {{! /check if a Website logo exists, if not, display the website name }}
         {{! /@website global variable used to display a logo and website name  }}

         {{! check if a menu is assigned to the Main menu position }}
         {{#if menus.mainMenu}}
            {{> menu menus.mainMenu}}
         {{/if}}
         {{! /check if a menu is assigned to the Main menu position }}
      </div>

      {{! display search plugin (searchbox: input + button) }}
      <div class="search-wrapper">
         {{{@customSearchInput}}} 
      </div>
      {{! /display search plugin (searchbox: input + button) }}
   </nav>
</header>